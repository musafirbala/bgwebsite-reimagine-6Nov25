# Cloudflare Pages Headers Configuration
# File: _headers
# Place in root directory for automatic security and performance headers

# Apply to all pages
/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; media-src 'self'; frame-src 'self' https://www.youtube.com https://player.vimeo.com; connect-src 'self' https://www.google-analytics.com https://cloudflareinsights.com; object-src 'none'; base-uri 'self'; form-action 'self' https://formspree.io
  
  # Performance & Caching
  Cache-Control: public, max-age=31536000, immutable
  
  # CORS (if needed for API calls)
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type

# HTML pages - shorter cache (content may change)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Homepage - shortest cache
/index.html
  Cache-Control: public, max-age=1800, must-revalidate

# Images - long cache with immutable
/images/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Videos - long cache
/videos/*
  Cache-Control: public, max-age=31536000, immutable

# CSS & JS - long cache with versioning
/css/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

/js/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Documents (PDFs) - moderate cache
/documents/*
  Cache-Control: public, max-age=86400, must-revalidate
  X-Content-Type-Options: nosniff

# Fonts - long cache
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# JSON data files - short cache
/data/*
  Cache-Control: public, max-age=3600, must-revalidate
  X-Content-Type-Options: nosniff

# Favicon and manifest
/favicon.ico
  Cache-Control: public, max-age=604800

/manifest.json
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# Sitemap and robots - moderate cache
/sitemap.xml
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

/robots.txt
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# 404 page
/404.html
  Cache-Control: public, max-age=3600
